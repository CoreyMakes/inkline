/**
 * Tables
 */

@import '../../css/config'
@import '../../css/mixins'
@import 'css/_variables'
@import 'css/_variants'

.datatable
    width: 100%
    max-width: 100%
    margin-bottom: --spacer

    th,
    td
        padding: --datatable-cell-padding
        vertical-align: top
        border-top: --datatable-border-width solid transparent

    thead th
        vertical-align: bottom
        border-bottom-width: (2 * --datatable-border-width)

    tbody + tbody
        border-top: (2 * --datatable-border-width) solid transparent

    // Condensed table w/ half padding
    //
    &.-condensed
        th
        td
            padding: --datatable-cell-padding-sm


    // Bordered version
    //
    // Add borders all around the table and between all the columns.
    //
    &.-bordered
        border: --datatable-border-width solid transparent

        th
        td
            border: --datatable-border-width solid --datatable-border-color


    // Hover table
    //
    // Placed here since it has to come after the potential zebra striping
    //
    &.-hover
        tbody tr
            th, td
                if --transition-enabled and --transition['datatable']
                    transition: background-color --transition-duration ease


    th
    td
    tbody + tbody
        border-top-color: --border-color

    thead th
        border-bottom-color: --border-color

    .dtd
    .dth
        display: flex
        justify-content: flex-start
        align-items: center

        &.-count,
        &.-number
            justify-content: flex-end

.datatable
    @extend .datatable.-light
